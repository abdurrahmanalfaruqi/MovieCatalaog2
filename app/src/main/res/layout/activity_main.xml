<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFilm.DetailFilm"
    android:padding="8dp"
    android:orientation="vertical">
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="@+id/garisx"
        app:layout_constraintBottom_toBottomOf="@+id/garisy"
        android:id="@+id/fotodetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent=".5"
        android:orientation="horizontal"
        android:id="@+id/garisy"/>
    
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent=".5"
        android:orientation="vertical"
        android:id="@+id/garisx"/>
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="17dp"
        android:id="@+id/text_title"
        android:textColor="@android:color/background_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/garisx"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        android:textSize="17dp"
        android:text="JUDUL"
        android:textStyle="normal"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/garisy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="OverView"
        android:id="@+id/text_overview"/>





    


</androidx.constraintlayout.widget.ConstraintLayout>